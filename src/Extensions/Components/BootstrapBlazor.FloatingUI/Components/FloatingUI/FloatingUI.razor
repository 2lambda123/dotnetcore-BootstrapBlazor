@namespace BootstrapBlazor.Components
@inherits IdComponentBase

<div @attributes="@AdditionalAttributes" class="@ClassString" id="@Id">
    <CascadingValue Value="this" IsFixed="true">
        @ChildContent
    </CascadingValue>
    @if (IsRendered)
    {
        @RenderFloatingElement()
    }
</div>
