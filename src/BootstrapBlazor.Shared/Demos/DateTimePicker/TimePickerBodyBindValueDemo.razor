<TimePickerBody @bind-Value="@Value" OnConfirm="OnConfirm" />
<BlockLogger @ref="Logger" class="mt-3" />

@code {
    [NotNull]
    private BlockLogger? Logger { get; set; }

    private TimeSpan Value { get; set; } = DateTime.Now - DateTime.Today;

    private void OnConfirm()
    {
        Logger.Log($"Value: {Value:hh\\:mm\\:ss}");
    }
}
