<DatePickerBody @bind-Value="Value" OnConfirm="@OnConfirm" ShowFooter="false" />
<BlockLogger @ref="DateLogger" class="mt-3" />

@code {
    [NotNull]
    private BlockLogger? DateLogger { get; set; }

    private DateTime Value { get; set; } = DateTime.Today;

    private Task OnConfirm()
    {
        DateLogger.Log($"Value: {Value:yyyy-MM-dd}");
        return Task.CompletedTask;
    }
}
